<div class="row">
	<div class="col-lg-6">
		<img src= <%= image_path('/images/fridge.png') %> >
	</div>

<h1><b>Log In</b></h1>
<br>
<p><i>Login as guest with username "guest", password "test"</i></p>
<br>
<div class="col-lg-6">
	<%= form_tag '/login' do %>
<div class="form-group">
	<%= label_tag :name %>
	<%= text_field_tag :name %>
</div>
<div class="form-group">
	<%= label_tag :password %>
	<%= password_field_tag :password %>
</div>
	<%= submit_tag "Log In", class: "btn-info" %>
	<% end %>
	</div>
</div>
